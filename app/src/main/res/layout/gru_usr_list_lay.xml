<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@drawable/ic_rectangle_2401"
    android:orientation="vertical"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/user_list_layoutt2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="60dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/usr_txt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="6 Users"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_drop_down"
                android:tint="@color/white" />


        </LinearLayout>

        <com.eot_app.utility.util_interfaces.NoDefaultSpinner
            android:id="@+id/usr_stats_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_list_layoutt2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:popupBackground="@drawable/popupbg" />
    </RelativeLayout>
    <!--            android:textAlignment="center"
    -->


</LinearLayout>