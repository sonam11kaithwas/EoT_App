<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_menu.setting.Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_label_language"
                style="@style/style_sec_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Language" />


            <TextView
                android:id="@+id/title_language"
                style="@style/header_text_style"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="English" />


            <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                android:id="@+id/language_spinner"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_page"
                android:background="@android:color/transparent"
                android:popupBackground="@drawable/popupbg"
                android:visibility="invisible" />


        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/a"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:background="@color/border_font_color" />


        <LinearLayout
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_label_view"
                style="@style/style_sec_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default page view" />


            <TextView
                android:id="@+id/text_page"
                style="@style/header_text_style"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Calendar" />


            <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                android:id="@+id/page_spinner"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_page"
                android:background="@android:color/transparent"
                android:popupBackground="@drawable/popupbg"
                android:visibility="invisible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/a"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:background="@color/border_font_color" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:visibility="visible">


            <TextView
                android:id="@+id/site_name_show_txt"
                style="@style/style_sec_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/site_name_show_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="56dp" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/a"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/border_font_color" />


        <LinearLayout
            android:id="@+id/ll_report_bug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:visibility="gone">


            <TextView
                android:id="@+id/tv_report_msg"
                style="@style/style_sec_sec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="If you encounter a bug or issue, Please report here." />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_report"
                style="@style/style_sec"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/view1"
                android:layout_gravity="center|top"
                android:background="@drawable/submit_btn"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Report"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>


        <View
            android:id="@+id/report_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/b"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:background="@color/border_font_color"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>