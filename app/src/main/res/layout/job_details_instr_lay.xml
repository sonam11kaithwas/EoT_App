<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:elevation="2dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
        <!--        android:layout_marginBottom="8dp"
        -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:id="@+id/textView9"
                style="@style/job_details_headr_style"
                android:layout_alignParentLeft="true"
                android:text="Instruction" />


            <TextView
                android:id="@+id/textViewInstruction"
                style="@style/job_details_child_style"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="5dp"
                android:text="Work faster with tools like compatibility toggles, ADB incremental installs, and more! Plus the code changes that might've affected your app. Download the latest version." />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>