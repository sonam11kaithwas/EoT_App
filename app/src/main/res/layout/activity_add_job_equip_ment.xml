<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_quote_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:fitsSystemWindows="false"
    tools:context=".nav_menu.jobs.job_detail.job_equipment.add_job_equip.AddJobEquipMentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_edit_item_Btn"
        android:layout_alignParentTop="true"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/right_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"><!--android:layout_marginTop="8dp"-->
                <CheckBox
                    android:id="@+id/ch_equ_as_part"
                    style="@style/style_sec_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:text="Equipment as a part"
                    android:textSize="@dimen/medium_text"
                    android:visibility="visible" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/equ_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_field_height"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">


                    <EditText
                        android:id="@+id/edt_equ"
                        style="@style/style_sec_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:singleLine="true" />

                    <!--android:dropDownWidth="match_parent"
                        android:minHeight="20dp"
                      -->
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <View
                android:id="@+id/part_no_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/equ_model_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingTop="5dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText">

                <EditText
                    android:id="@+id/edt_equ_model"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:singleLine="true" />
                <!--android:hint="@string/hsn_code"-->
            </com.google.android.material.textfield.TextInputLayout>


            <!--   <View
                   android:id="@+id/hsncode_view"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_marginTop="5dp"
                   android:background="@color/border_font_color" />-->


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/equ_supplier_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:visibility="gone"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText">

                <EditText
                    android:id="@+id/edt_equ_supplier"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <TextView
                android:id="@+id/txt_date"
                style="@style/style_sec_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:hint="Date"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textSize="@dimen/medium_text_low"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/manuf_date_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/manuf_date_lable"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/arimo_regular"
                    android:gravity="center|left" />

                <TextView
                    android:id="@+id/manuf_date_txt"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/date_icon"
                    android:drawablePadding="@dimen/tv_drawable_padding"
                    android:gravity="end"
                    android:textSize="@dimen/medium_text_low" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/catery_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:gravity="center"
                android:paddingTop="5dp"
                android:visibility="visible"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText">


                <AutoCompleteTextView
                    android:id="@+id/auto_catery"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:dropDownHeight="140dp"
                    android:dropDownVerticalOffset="-5dp"
                    android:inputType="text"
                    android:popupBackground="@drawable/popupbg"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/grp_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:gravity="center"
                android:paddingTop="5dp"
                android:visibility="visible"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText"><!--android:paddingTop="8dp"-->

                <AutoCompleteTextView
                    android:id="@+id/auto_grp"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:dropDownHeight="140dp"
                    android:dropDownVerticalOffset="-5dp"
                    android:inputType="text"
                    android:popupBackground="@drawable/popupbg"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:gravity="center"
                android:paddingTop="5dp"
                android:visibility="visible"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText">

                <EditText
                    android:id="@+id/auto_client"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:dropDownHeight="140dp"
                    android:dropDownVerticalOffset="-5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:popupBackground="@drawable/popupbg"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>
            <!--Client Site View Start-->

            <View
                android:id="@+id/client_row"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/client_site_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:gravity="center"
                android:paddingTop="5dp"
                android:visibility="visible"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText"><!--android:paddingTop="8dp"-->

                <AutoCompleteTextView
                    android:id="@+id/auto_client_site"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:dropDownHeight="140dp"
                    android:dropDownVerticalOffset="-5dp"
                    android:inputType="text"
                    android:popupBackground="@drawable/popupbg"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--Client Site View End-->

            <!--Start Status View-->

            <View
                android:id="@+id/site_row"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/hint_status_txt"
                    style="@style/text_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linearLayout_status"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_field_height"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/status_txt"
                        style="@style/style_sec_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:hint="" />

                    <ImageView
                        android:id="@+id/img_status"
                        style="@style/subtext_style"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_drop_down_black"
                        android:tint="@color/colorPrimary" />

                </LinearLayout>

                <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                    android:id="@+id/status_Dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout_status"
                    android:background="@android:color/transparent"
                    android:dropDownWidth="match_parent"
                    android:minHeight="20dp"
                    android:popupBackground="@drawable/popupbg"
                    android:visibility="invisible" />
            </RelativeLayout>

            <!--End Status View-->


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <TextView
                android:id="@+id/type"
                style="@style/style_sec_sec"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_field_height"
                android:layout_gravity="center|start"
                android:background="@android:color/transparent"
                android:gravity="center|start"
                android:paddingEnd="@dimen/input_field_padding"
                android:singleLine="true"
                android:text="Type" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rediogrp"
                style="@style/style_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="-3dp"
                android:divider="?android:attr/dividerHorizontal"
                android:gravity="left|center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_owner"
                    style="@style/style_thrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/radio_serv_prov"
                    style="@style/style_thrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Service Provider" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_font_color" />

            <CheckBox
                android:id="@+id/checkbox_barCode"
                style="@style/style_sec_sec"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_field_height"
                android:layout_marginLeft="-5dp"
                android:gravity="center|start"
                android:text="Generate BarCode" />


            <View
                android:id="@+id/qty_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/auto_barnd_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:gravity="center"
                android:paddingTop="5dp"
                android:visibility="visible"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText">

                <AutoCompleteTextView
                    android:id="@+id/auto_brand"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:dropDownHeight="140dp"
                    android:dropDownVerticalOffset="-5dp"
                    android:inputType="text"
                    android:popupBackground="@drawable/popupbg"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/equ_serial_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingTop="5dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText">

                <EditText
                    android:id="@+id/edt_equ_serial"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:singleLine="true" />
                <!--                      android:inputType="numberDecimal"-->
            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <TextView
                android:id="@+id/txt_date_warnty"
                style="@style/style_sec_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:hint="Date"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textSize="@dimen/medium_text_low"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/date_warnty_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/warnty_date_lable"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/arimo_regular"
                    android:gravity="center|left" />

                <TextView
                    android:id="@+id/warnty_date_txt"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/date_icon"
                    android:drawablePadding="@dimen/tv_drawable_padding"
                    android:gravity="end"
                    android:textSize="@dimen/medium_text_low" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />

            <TextView
                android:id="@+id/txt_date_purchase"
                style="@style/style_sec_sec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:hint="Date"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textSize="@dimen/medium_text_low"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/date_purchase_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/purchase_date_lable"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/arimo_regular"
                    android:gravity="center|left" />

                <TextView
                    android:id="@+id/purchase_date_txt"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/date_icon"
                    android:drawablePadding="@dimen/tv_drawable_padding"
                    android:gravity="end"
                    android:textSize="@dimen/medium_text_low" />

            </LinearLayout>

            <View
                android:id="@+id/rate_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/border_font_color" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/equ_adrs_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingTop="5dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextInputLayoutHintText">

                <EditText
                    android:id="@+id/edt_equ_adrs"
