<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="170dp"
    android:layout_gravity="center"
    android:background="@drawable/outerborder_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imvPhoneCall"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_call_24dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtViewSkypeCon1"
            style="@style/style_thrid_thrd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imvPhoneCall"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imvPhoneCall1"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_below="@id/txtViewSkypeCon1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_call_24dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtViewSkypeCon2"
            style="@style/style_thrid_thrd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/txtViewSkypeCon1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imvPhoneCall1"
            android:autoLink="all"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/viewBottom"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_above="@+id/btnClose"
        android:background="@color/border_font_color" />

    <TextView
        android:id="@+id/btnClose"
        style="@style/style_thrid_thrd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

</RelativeLayout>
