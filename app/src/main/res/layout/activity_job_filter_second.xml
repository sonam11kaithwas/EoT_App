<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    tools:context=".nav_menu.jobs.job_filter.JobFilter_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fil_status_hint"
                style="@style/text_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                android:textStyle="normal"
                android:visibility="invisible" />


            <LinearLayout
                android:id="@+id/fil_status_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_name"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scrollbars="horizontal"
                    android:scrollHorizontally="true" />

                <ImageView
                    android:id="@+id/status_img"
                    style="@style/subtext_style"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_drop_down_black" />

            </LinearLayout>


            <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                android:id="@+id/fil_status_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fil_status_layout"
                android:background="@android:color/transparent"
                android:dropDownWidth="match_parent"
                android:minHeight="20dp"
                android:popupBackground="@drawable/popupbg"
                android:visibility="invisible" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/border_font_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fil_prity_hint"
                style="@style/text_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                android:textStyle="normal"
                android:visibility="invisible" />


            <LinearLayout
                android:id="@+id/fil_prity_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prity_name"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scrollbars="horizontal"
                    android:scrollHorizontally="true" />

                <ImageView
                    style="@style/subtext_style"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_drop_down_black" />

            </LinearLayout>


            <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                android:id="@+id/fil_prity_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fil_prity_layout"
                android:background="@android:color/transparent"
                android:dropDownWidth="match_parent"
                android:minHeight="20dp"
                android:popupBackground="@drawable/popupbg"
                android:visibility="invisible" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/border_font_color" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/fil_tag_hint"
                style="@style/text_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/fil_tag_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tag_name"
                    style="@style/style_sec_sec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scrollbars="horizontal"
                    android:scrollHorizontally="true" />

                <ImageView
                    style="@style/subtext_style"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_drop_down_black" />

            </LinearLayout>

            <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                android:id="@+id/fil_tag_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fil_tag_layout"
                android:background="@android:color/transparent"
                android:dropDownWidth="match_parent"
                android:minHeight="20dp"
                android:popupBackground="@drawable/popupbg"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/border_font_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/filter_btn"
            style="@style/style_sec"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_field_height"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/submit_btn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reset_btn"
            style="@style/style_sec"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_field_height"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/red_back_btn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
