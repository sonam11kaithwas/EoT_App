<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/outerborder_bg">

    <TextView
        android:id="@+id/msg"
        style="@style/style_thrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:gravity="center"
        android:textStyle="bold" />

    <View
        android:id="@+id/msg_seperater"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/msg"
        android:background="@color/border_font_color" />

    <RelativeLayout
        android:id="@+id/radio_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_seperater"
        android:minHeight="80dp">

        <RadioGroup
            android:id="@+id/radio_group"
            style="@style/style_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:divider="?android:attr/dividerHorizontal"
            android:gravity="left|center"
            android:orientation="vertical"
            android:showDividers="middle" />
    </RelativeLayout>

    <View
        android:id="@+id/viewBottom"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/radio_grp"
        android:background="@color/border_font_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/viewBottom"
        android:gravity="end|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnClose"
            style="@style/style_thrid"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/heading_green" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/border_font_color" />

        <TextView
            android:id="@+id/btn_continue"
            style="@style/style_thrid"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/heading_green" />
    </LinearLayout>

</RelativeLayout>
