<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.eot_app.nav_menu.jobs.add_job.Add_job_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submit_btn"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin"
        android:orientation="vertical">


        <Button
            android:id="@+id/date_time_clear_btn"
            style="@style/style_sec_sec"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@drawable/clear_btn_bck"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_field_height"
            android:layout_marginTop="-8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/schel_start"
                style="@style/style_sec_sec"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/arimo_regular"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/date_start"
                    style="@style/style_sec_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/date_icon"
                    android:drawablePadding="@dimen/tv_drawable_padding"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text_low" />

                <TextView
                    android:id="@+id/time_start"
                    style="@style/style_sec_sec"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/watch_icon"
                    android:drawablePadding="@dimen/tv_drawable_padding"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text_low" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_field_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/schel_end"
                style="@style/style_sec_sec"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/arimo_regular"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/date_end"
                    style="@style/style_sec_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/date_icon"
                    android:drawablePadding="@dimen/tv_drawable_padding"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/medium_text_low" />

                <TextView
                    android:id="@+id/time_end"
                    style="@style/style_sec_sec"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/watch_icon"
                    android:drawablePadding="@dimen/tv_drawable_padding"
                    android:gravity="center"
                    android:textSize="@dimen/medium_text_low" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        style="@style/style_sec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_field_height"
        android:layout_above="@id/button_cancel"
        android:layout_margin="5dp"
        android:background="@drawable/submit_btn"
        android:text="Rescheudle"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_cancel"
        style="@style/style_sec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_field_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/brdr_btm"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold" />
</RelativeLayout>



