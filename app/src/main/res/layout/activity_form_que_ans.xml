<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/client_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    tools:context=".nav_menu.jobs.job_detail.form_form.get_qus_list.FormQueAns_Activity">

    <LinearLayout
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:elevation="10dp"
        android:gravity="center|left">

        <ImageView
            android:id="@+id/backme"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/ic_left" />

        <TextView
            android:id="@+id/actionbar_title"
            style="@style/header_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_title"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout2" />
        <!--android:layout_below="@+id/custom_title"-->

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sbmt_btn"
                style="@style/style_sec"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_field_height"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/submit_btn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/skip_btn"
                style="@style/style_sec"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_field_height"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/submit_btn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"


                />
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/em_layout"
        layout="@layout/empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_title"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_title">

    </FrameLayout>
</RelativeLayout>